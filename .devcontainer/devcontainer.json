// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"dockerComposeFile": "./docker-compose.yaml",
	"service": "sql-db-utils",
	"workspaceFolder": "/sql-db-utils",
	"shutdownAction": "stopCompose",
	"customizations": {
		"vscode": {
			"extensions": [
				"vivaxy.vscode-conventional-commits",
				"ms-toolsai.datawrangler",
				"mikestead.dotenv",
				"elagil.pre-commit-helper",
				"donjayamanne.python-extension-pack",
				"charliermarsh.ruff",
				"sourcery.sourcery", // Remove sourcery and sonarlint if you have less memory
				"SonarSource.sonarlint-vscode",
				"redhat.vscode-yaml",
				"ms-azuretools.vscode-docker",
				"ms-toolsai.jupyter"
			],
			"settings": {
				"[python]": {
					"editor.formatOnType": false,
					"editor.codeActionsOnSave": {
						"source.organizeImports.ruff": "explicit",
						"source.fixAll": "explicit",
						"source.formatDocument": "always"
					}
				},
				"files.watcherExclude": {
					"**/.git/objects/**": true,
					"**/.git/subtree-cache/**": true,
					"**/.hg/store/**": true,
					"**/.pytest_cache/**": true,
					"**/.ruff_cache/**": true,
					"**/__pycache__/**": true,
					"./data/**": true,
				}
			}
		}
	},
	"remoteUser": "root",
	"containerUser": "root",
	"postCreateCommand": "pre-commit install -t pre-commit && pre-commit install-hooks",
	"features": {
		"ghcr.io/jsburckhardt/devcontainer-features/ruff:1": {},
		"ghcr.io/jsburckhardt/devcontainer-features/uv:1": {}
	}
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}